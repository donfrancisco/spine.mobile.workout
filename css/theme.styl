@import './mixin'

body
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif
  overflow-x: hidden
  -webkit-user-select: none
  margin: 0; padding: 0
  color: #292D39
  background: #FFF

* 
  -webkit-tap-highlight-color: rgba(0,0,0,0)

body.stage 
  > header
    height: 40px
    
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.1)), color-stop(0.5, rgba(255, 255, 255, 0))), -webkit-gradient(linear, left top, left bottom, from(lighten(#6a83a1, 5%)), to(#6a83a1))
    border-bottom: 1px solid #2d3033
    
  // Disable footer:
  // > article
  //   bottom: 40px
  //   
  // > footer
  //   height: 40px
  //   
  //   background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.2)), color-stop(0.5, rgba(255, 255, 255, 0))), #000
    
.panel
  > header
    height: 40px
    line-height: 40px
    
    h2
      margin: 0
      padding: 0
      text-align: center
      color: #fffeff
      text-shadow: 0 -1px 0 rgba(094, 103, 113, 1)
      font-weight: normal
    
    button
      position: absolute
      left: 0
      top: 0
      
      color: #FFF
      text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5)
      font-size: 13px
    
      background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.1)), color-stop(0.5, rgba(255, 255, 255, 0))), #476b9d
      
      -webkit-box-shadow: inset 0 -1px 1px rgba(0, 0, 0, 0.3), inset 0 1px 1px 0 rgba(0, 0, 0, 0.5), 0 1px 0 rgba(255, 255, 255, 0.4)
      
      margin: 7px
      padding: 5px 12px
      border: 0
      border-radius(5px)
      
      &:active
        -webkit-box-shadow: inset 0 -1px 1px rgba(0, 0, 0, 0.3), inset 0 1px 1px 0 rgba(0, 0, 0, 0.6), 0 1px 0 rgba(255, 255, 255, 0.4), inset 0 0 20px rgba(255, 255, 255, 0.2)
        
      &.right
        left: auto
        right: 0

.panel.list
  .item
    height: 44px
    line-height: 44px
    padding: 0 10px
    border-bottom: 1px solid #e0e0e0
    ellipsis()
        
body.landscape::after
  content: "Portrait only mode supported"
  font-size: 16px
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  text-align: center
  padding: 15%
  background: rgba(255, 255, 255, 0.9)